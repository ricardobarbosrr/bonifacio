RewriteEngine On
RewriteBase /hostinger-api/

# Habilitar CORS
<IfModule mod_headers.c>
    Header set Access-Control-Allow-Origin "*"
    Header set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
    Header set Access-Control-Allow-Headers "Content-Type, Authorization"
    
    # Responder imediatamente às solicitações OPTIONS
    RewriteCond %{REQUEST_METHOD} OPTIONS
    RewriteRule ^ - [R=204,L]
</IfModule>

# Roteamento para endpoints específicos
RewriteRule ^articles(/.*)?$ articles.php [QSA,L]

# Redirecionar requisições para o index.php se não for um arquivo ou diretório
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php [QSA,L]

# Prevenir acesso direto a arquivos sensíveis
<FilesMatch "^(config\.php|env\.php|.*\.sql)$">
    Order Deny,Allow
    Deny from all
</FilesMatch>

# Definir página de erro personalizada
ErrorDocument 404 /api/error.php
